<p id="notice"><%= notice %></p>

<h1>Uploads</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">File</th>
      <th scope="col"></th>
    </tr>
  </thead>

  <tbody>
    <% @uploads.each do |upload| %>
      <tr>
        <td><%= upload.name %></td>
        <td><%= link_to "File", url_for(upload.file) %></td>
        <td><%= link_to 'Show', upload %> | <%= link_to 'Edit', edit_upload_path(upload) %> | <%= link_to 'Destroy', upload, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

